{
  "name": "react-use-async",
  "version": "0.0.10",
  "description": "React hook to manage async related state",
  "repository": "http://github.com/wolverineks/react-use-async",
  "license": "ISC",
  "author": "Kevin Sullivan <wolverine.ks@gmail.com>",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf dist && mkdir dist && rollup -c",
    "flow": "node_modules/.bin/flow",
    "flow-coverage": "flow-coverage-report",
    "format": "sort-package-json && import-sort -l --write '*.js' 'src/**/*.js' && prettier-eslint --write --list-different '*.js' 'src/**/*.js';",
    "lint": "eslint '*.js' 'src/**/*.js'",
    "precommit": "lint-staged && flow && yarn build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "import-sort -l --write",
      "prettier-eslint --write",
      "git add"
    ],
    "*.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {},
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-flowtype": "^3.4.2",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "flow-bin": "^0.93.0",
    "flow-coverage-report": "^0.6.1",
    "husky": "^1.3.1",
    "import-sort-cli": "^6.0.0",
    "import-sort-parser-babylon": "^6.0.0",
    "import-sort-style-module": "^6.0.0",
    "lint-staged": "^8.1.4",
    "prettier-eslint-cli": "^4.7.1",
    "rollup": "^1.2.3",
    "rollup-plugin-flow": "^1.1.1",
    "rollup-plugin-flow-entry": "^0.3.0",
    "sort-package-json": "^1.19.0"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "flow-coverage-report": {
    "globIncludePatterns": [
      "src/**/*.js"
    ],
    "reportTypes": [
      "text",
      "html",
      "json"
    ]
  },
  "importSort": {
    ".js, .es": {
      "parser": "babylon",
      "style": "module"
    }
  }
}
